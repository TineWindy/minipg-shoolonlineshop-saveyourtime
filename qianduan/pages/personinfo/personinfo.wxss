.userinfo {
  position: relative;
  width: 750rpx;
  height: 320rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  overflow: hidden;
  display: block;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
  margin-top: 50rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.userinfo-nickname {
  color: rgb(0, 0, 0);
}

.text_input{
  margin-left: 70rpx;
  margin-right: 70rpx;
}
.button_input{
  padding-left: 100rpx;
  padding-right: 80rpx;
  width: 70%;
  text-align: center;
}
.btn{
  width: 20%;
}